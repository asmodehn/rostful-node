<launch>
  <arg name="echo_service_name" default="test_service"/>
  <arg name="slow_service_name" default="test_timeout_service"/>

  <node name="echo_node" pkg="pyros_test" type="echo.py" output="screen">
    <param name="echo_service_name" value="$(arg echo_service_name)" type="str"/>
  </node>

  <node name="slow_node" pkg="pyros_test" type="string_slow_node.py" output="screen">
    <param name="slow_service_name" value="$(arg slow_service_name)" type="str"/>
  </node>

  <!-- params for tests are always absolute -->
  <param name="/stringServiceTest/echo_service_name" value="$(arg echo_service_name)" type="str"/>
  <param name="/stringServiceTest/slow_service_name" value="$(arg slow_service_name)" type="str"/>
  <test test-name="Service" pkg="pyros" type="testService.py" name="ServiceTest"/>
</launch>